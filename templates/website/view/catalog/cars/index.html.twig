{% extends 'website/base.html.twig' %}

{% block title %}
    <title>
        Katalog: Flota | CarFLOw.site - Ty spełniaj marzenia, My dostarczymy samochód.
    </title>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <ol class="breadcrumb">
            <li><a href="{{ path('app_website_home') }}">Organizations</a></li>
            <li class="active">Pojazdy</li>
        </ol>

        {% if cars %}
            <div class="row">
                {% for car in cars %}
                    <div class="col-xs-4">
                        <div class="thumbnail">
                            <div class="caption">
                                <h3>{{ car.brand }} {{ car.model }}</h3>
                                {{ car.vin }}
                                <p>
                                    <a href="{{
                                    path(
                                            'app_website_organization_branch_car',
                                            {
                                                organizationSlug: car.branch.organization.slug,
                                                branchSlug: car.branch.slug,
                                                carId: car.id
                                            }
                                    )
                                    }}" class="btn btn-primary" role="button">
                                        Pokaż szczegóły
                                    </a>
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <div class="alert alert-info" role="alert">Brak danych</div>
        {% endif %}
    </div>
{% endblock %}